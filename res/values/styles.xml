<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.AppCompat.Light.DarkActionBar.Translucent"
           parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    
    <style name="Theme.AppCompat.Light.DarkActionBar.Translucent.NoTitleBar"
           parent="Theme.AppCompat.Light.DarkActionBar.Translucent">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
    <style name="SettingItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginBottom">1dp</item>
    </style>
    
    <style name="SettingTitleItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">1dp</item>
    </style>
</resources>
